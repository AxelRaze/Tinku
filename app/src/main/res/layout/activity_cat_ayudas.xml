<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cat_Medicos">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="MENU DE SOPORTE"
                android:textSize="24sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/logocir" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TINKU"
                    android:textSize="50sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/emertinku"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Llamar"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    app:backgroundTint="@android:color/holo_green_dark" />
            </LinearLayout>


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/btnnoso"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:drawableStart="@android:drawable/ic_menu_info_details"
                android:text="ACERCA DE nOSOTROS"
                app:backgroundTint="@color/Transparent" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/calificarapp"
                app:backgroundTint="@color/Transparent"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:drawableStart="@android:drawable/btn_star_big_off"
                android:text="CALIFICAR APP" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/compartir"
                app:backgroundTint="@color/Transparent"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:drawableStart="@android:drawable/ic_menu_share"
                android:text="COMPARTIR APP" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/butplv"
                app:backgroundTint="@color/Transparent"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableStart="@android:drawable/ic_secure"
                android:text="politicas de Privacidad" />
        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>