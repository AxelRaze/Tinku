<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".activity.DetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvTituloDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="34sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgItemDetail"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="right"
                    android:background="@color/black"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitXY" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  Datos"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvDirec"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/line"
                        android:layout_marginTop="10dp"
                        android:drawableStart="@drawable/ic_small_address"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical"
                        android:maxLines="2"
                        android:text="@string/no_item_found"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/text_color_feature"
                        android:textSize="15sp"
                        android:textStyle="italic" />

                    <TextView
                        android:id="@+id/tvTelefono"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textAddress"
                        android:layout_marginTop="5dp"
                        android:drawableStart="@android:drawable/ic_menu_call"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="@string/no_item_found"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/text_color_feature"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/emertinku"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Llamar"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        app:backgroundTint="@android:color/holo_green_dark" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DescripciÃ³n:"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvDescripcionDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textWebsite"
                    android:textSize="16sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/whatsapp"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_below="@+id/whatsapp"
                    android:layout_margin="2dp"
                    android:drawableStart="@drawable/whats"
                    android:textSize="16sp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/tvCorreo"
                    android:layout_margin="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_below="@+id/textWebsite"
                    android:drawableStart="@drawable/ic_small_email"
                    android:textSize="16sp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/tvWeb"
                    android:layout_margin="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_below="@+id/textWebsite"
                    android:drawableStart="@drawable/insya"
                    android:textSize="16sp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/tvFace"
                    android:layout_width="match_parent"
                    android:layout_height="27dp"
                    android:layout_below="@+id/textWebsite"
                    android:layout_margin="2dp"
                    android:drawableStart="@drawable/face"
                    android:paddingEnd="10dp"
                    android:textSize="16sp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/MessengerFace"
                    android:layout_width="match_parent"
                    android:layout_height="27dp"
                    android:layout_below="@+id/textWebsite"
                    android:layout_margin="2dp"
                    android:drawableStart="@drawable/messing"
                    android:paddingEnd="10dp"
                    android:textSize="16sp"
                    android:textStyle="bold|italic" />





                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ubicacion:"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/tvMapa"
                    android:layout_margin="2dp"
                    android:layout_width="401dp"
                    android:layout_height="261dp"
                    android:layout_gravity="right"
                    android:background="@color/black"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitXY" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"/>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>